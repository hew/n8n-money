# Career Magnetism System Environment Configuration

# n8n Configuration (Required for workflow deployment)
N8N_BASE_URL=http://localhost:5678/api
N8N_API_KEY=your_n8n_api_key_here

# Optional API Keys for Enhanced Features
OPENAI_API_KEY=your_openai_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# Career Magnetism Configuration
CAREER_AGENT_CYCLE_INTERVAL=21600000  # 6 hours in milliseconds
CAREER_DAILY_REPORT_TIME=09:00
CAREER_WEEKLY_REPORT_DAY=1  # Monday = 1

# Performance Tracking
TRACK_API_USAGE=true
TRACK_LEAD_QUALITY=true
TRACK_CONTENT_REACH=true
TRACK_SOCIAL_ENGAGEMENT=true

# System Thresholds
MIN_API_REQUESTS_FOR_DEPLOYMENT=200
MIN_QUALIFIED_LEADS_FOR_SCALING=10
TARGET_MONTHLY_API_REQUESTS=1000
TARGET_MONTHLY_QUALIFIED_LEADS=25